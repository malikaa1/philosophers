    "version": "0.2.0",
    "configurations": [
        {
            "name": "Make and debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "/home/user42/projects/philo/philosophers/philo",
            "args": [
                "4",
                "200",
                "100",
                "100"
            ],
            "stopAtEntry": false,
            "cwd": "/home/user42/projects/philo/philosophers",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}